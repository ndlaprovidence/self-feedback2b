{% extends 'admin.html.twig' %}

{% block title %}Taux de vote
{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/tauxdevote.css') }}">
<div class="wrapper">

  <div class="header">
    <h1 class="header__title">{% trans %} Taux de vote {% endtrans %}</h1>
    <h2 class="header__subtitle">{% trans %} par classes {% endtrans %}</h2>
  </div>

  <div class="cards">
  {% for tableauCount in tableauCounts %}
    <div class=" card ">
      <div class="card__inner">
        <span> <em>{{tableauCount.count}} {{tableauCount.name}}</em><br/> {% if tableauCount.count == '1' %}{% trans %}a voté ! {% endtrans %} {% else %} {% trans %}ont voté ! {% endtrans %}{% endif %}</span>
      </div>
    </div>
    {% endfor %}

  </div>

</div>
{% endblock %}
